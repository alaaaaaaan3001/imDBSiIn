CREATE TABLE PARTIDAS (
    JUGADOR_A INT NOT NULL,
    JUGADOR_B INT NOT NULL,
    MARCADOR INT NOT NULL,
    PRIMARY KEY (JUGADOR_A, JUGADOR_B)
);

INSERT INTO PARTIDAS VALUES
(1001,2002,150),
(3003,4004,15),
(4004,3003,125);

SELECT 
    LEAST(JUGADOR_A, JUGADOR_B) AS JUGADOR_A,
    GREATEST(JUGADOR_A, JUGADOR_B) AS JUGADOR_B
    SUM(MARCADOR) AS MARCADOR
FROM PARTIDAS
GROUP BY LEAST (JUGADOR_A, JUGADOR_B), GREATEST (JUGADOR_A, JUGADOR_B);
